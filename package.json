{
  "name": "node-sportify",
  "version": "0.0.1",
  "private": true,
  "browserify": {
    "transform": [
      [
        "hbsfy",
        {
          "extensions": [
            "hbs"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "server-prod": "NODE_ENV=production node ./bin/www",
    "server-dev": "NODE_ENV=development node ./bin/www",
    "start": "npm run build && npm run server-prod",
    "start-dev": "npm run server-dev & npm run watch",
    "build-js": "browserify public/javascripts/main.js | uglifyjs -mc > public/build/bundle.js",
    "build-css": "lessc public/stylesheets/main.less > public/build/bundle.css",
    "build": "npm run build-js && npm run build-css",
    "watch-js": "watchify public/javascripts/main.js -o public/build/bundle.js -dv",
    "watch-css": "catw -w -c 'lessc -' 'public/stylesheets/main.less' -o public/build/bundle.css -v",
    "watch": "npm run watch-js & npm run watch-css"
  },
  "dependencies": {
    "async": "~1.4.2",
    "body-parser": "~1.0.0",
    "cookie-parser": "~1.0.1",
    "cookies": "^0.5.0",
    "debug": "~0.7.4",
    "express": "~4.0.0",
    "express-handlebars": "^2.0.1",
    "express-session": "^1.11.2",
    "jade": "~1.3.0",
    "jquery": "~2.1.4",
    "morgan": "~1.0.0",
    "react": "^0.14.1",
    "react-dom": "^0.14.1",
    "@sanchezjjose/react-toggle-component": "~0.0.7",
    "querystring": "^0.2.0",
    "static-favicon": "~1.0.0"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "connect-livereload": "^0.5.3",
    "forever-monitor": "^1.6.0",
    "gulp": "^3.9.0",
    "gulp-less": "^3.0.2",
    "gulp-live-server": "^0.0.28",
    "gulp-minify-css": "^1.2.1",
    "gulp-plumber": "^1.0.1",
    "gulp-print": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-streamify": "0.0.5",
    "gulp-uglify": "^1.1.0",
    "handlebars": "^3.0.3",
    "hbsfy": "^2.2.1",
    "require-dir": "^0.3.0",
    "vinyl-source-stream": "^1.1.0",
    "vinyl-transform": "^1.0.0",
    "watchify": "^2.2.1"
  }
}
