{
  "name": "application-name",
  "version": "0.0.1",
  "private": true,
  "browserify": {
    "transform": [
      "babelify",
      "aliasify",
      "node-lessify",
      [
        "hbsfy",
        {
          "extensions": [
            "hbs"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "server": "node ./bin/www",
    "start": "npm run build && npm run server",
    "start-dev": "npm run server & npm run watch",
    "build-js": "browserify public/javascripts/main.js | uglifyjs -mc > public/build/bundle.js",
    "build-css": "lessc public/stylesheets/style.less > public/build/bundle.css",
    "build": "npm run build-js",
    "watch-js": "watchify public/javascripts/main.js -o public/build/bundle.js -dv",
    "watch-css": "catw -w -c 'lessc -' 'public/stylesheets/style.less' -o public/build/bundle.css -v",
    "watch": "npm run watch-js"
  },
  "dependencies": {
"g5-component": "^1.4.0",

    "body-parser": "~1.0.0",
    "cookie-parser": "~1.0.1",
    "cookies": "^0.5.0",
    "debug": "~0.7.4",
    "express": "~4.0.0",
    "express-handlebars": "^2.0.1",
    "express-session": "^1.11.2",
    "jade": "~1.3.0",
    "morgan": "~1.0.0",
    "querystring": "^0.2.0",
    "react": "^0.13.3",
    "static-favicon": "~1.0.0"
  },
  "devDependencies": {
"aliasify": "^1.7.2",
"babel": "^5.5.6",
"babel-tape-runner": "^1.1.0",
"babelify": "^6.1.2",
"catw": "^0.2.0",
"ghooks": "^0.3.2",
"handlebars": "^3.0.3",
"hbsfy": "^2.2.1",
"jshint": "^2.8.0",
"less": "^2.5.1",
"node-lessify": "0.0.10",
"tap-spec": "^4.0.2",
"tape": "^4.0.0",
"uglify-js": "^2.4.16",
"watchify": "^2.2.1",

    "browserify": "^9.0.3",
    "connect-livereload": "^0.5.3",
    "gulp": "^3.8.11",
    "gulp-jshint": "^1.9.4",
    "gulp-less": "^3.0.2",
    "gulp-live-server": "0.0.14",
    "gulp-print": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-streamify": "0.0.5",
    "gulp-uglify": "^1.1.0",
    "handlebars": "^3.0.3",
    "hbsfy": "^2.2.1",
    "require-dir": "^0.3.0",
    "tiny-lr": "^0.1.5",
    "vinyl-source-stream": "^1.1.0",
    "vinyl-transform": "^1.0.0",
    "watchify": "^2.2.1"
  }
}
