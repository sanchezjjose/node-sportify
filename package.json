{
  "name": "application-name",
  "version": "0.0.1",
  "private": true,
  "browserify": {
    "transform": [
      [
        "hbsfy",
        {
          "extensions": [
            "html"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "server": "node ./bin/www",
    "start": "npm run build && npm run server",
    "start-dev": "NODE_ENV=development npm run build-cjs && npm run server & npm run watch",
    "build-cjs": "browserify public/javascripts/main.js | uglifyjs -mc > public/build/bundle.js",
    "build-js": "browserify public/javascripts/main.js --standalone 'main' | uglifyjs -mc > public/build/bundle.js",
    "build-css": "lessc public/stylesheets/style.less > public/build/bundle.css",
    "build": "npm run build-js && npm run build-cjs",
    "watch-js": "watchify public/javascripts/main.js -o public/build/bundle.js -dv",
    "watch-css": "catw -w -c 'lessc -' 'public/stylesheets/style.less' -o public/build/bundle.css -v",
    "watch": "npm run watch-js"
  },
  "dependencies": {
    "body-parser": "~1.0.0",
    "cookie-parser": "~1.0.1",
    "cookies": "^0.5.0",
    "debug": "~0.7.4",
    "express": "~4.0.0",
    "express-handlebars": "^2.0.1",
    "express-session": "^1.11.2",
    "jade": "~1.3.0",
    "morgan": "~1.0.0",
    "querystring": "^0.2.0",
    "react": "^0.13.3",
    "static-favicon": "~1.0.0"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "connect-livereload": "^0.5.3",
    "gulp": "^3.8.11",
    "gulp-jshint": "^1.9.4",
    "gulp-less": "^3.0.2",
    "gulp-live-server": "0.0.14",
    "gulp-print": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-streamify": "0.0.5",
    "gulp-uglify": "^1.1.0",
    "handlebars": "^3.0.3",
    "hbsfy": "^2.2.1",
    "require-dir": "^0.3.0",
    "tiny-lr": "^0.1.5",
    "vinyl-source-stream": "^1.1.0",
    "vinyl-transform": "^1.0.0",
    "watchify": "^2.2.1"
  }
}
