<h1>{{title}}</h1>

<div class="container">
	<form action="/account?team_id={{selected_team_id}}" method="POST">
	  <div class="account">
      <fieldset>
        <legend>Account Information</legend>

				<div class="" id="email_field">
					<label for="email">Email</label>
					<div class="input">
						<input type="text" id="email" name="email" value="{{email}}">
					</div>
				</div>

				<div class="" id="password_field">
					<label for="password">Password</label>
					<div class="input">
						<input type="password" id="password" name="password">
					</div>
				</div>

				<div class="" id="first_name_field">
					<label for="first_name">First Name</label>
					<div class="input">
						<input type="text" id="first_name" name="first_name" value="{{first_name}}">
					</div>
				</div>

				<div class="" id="last_name_field">
					<label for="last_name">Last Name</label>
					<div class="input">
						<input type="text" id="last_name" name="last_name" value="{{last_name}}">
					</div>
				</div>

				<div class="" id="number_field">
					<label for="number">Jersey Number</label>
					<div class="input">
						<input type="text" id="number" name="number" value="{{number}}">
					</div>
				</div>

				<div class="" id="phone_number_field">
					<label for="phone_number">Phone Number</label>
					<div class="input">
						<input type="text" id="phone_number" name="phone_number" value="{{phone_number}}">
						<span class="help">This will only be used by our team if we need to contact each other.</span> 
					</div>
				</div>

			  <div class="hidden clearfix" id="position_field">
		      <label for="position">Position</label>
		      <div class="input">
			      <select class="form-control" id="position" name="position">
		          <option class="blank" value="">{{position}}</option>
		          <option value="PG">PG</option>
		          <option value="SG">SG</option>
		          <option value="SF">SF</option>
		          <option value="F">F</option>
		          <option value="C">C</option>
			      </select>
		      </div>
			  </div>

			  <label>Admin?</label>
			  <input name="is_admin" value="{{is_admin}}" type="checkbox" disabled="" checked="">

			</fieldset>

			<div class="actions">
			  <input type="submit" class="btn btn-primary" value="Save">
			  <a href="/" class="btn btn-default">Cancel</a>
			</div>

		</div>
	</form>
</div>
